<div class="ionrift-list-item entity-row" title="{{description}}" data-key="{{key}}">
    <!-- Left: Info -->
    <div class="entity-info" style="flex: 1;">
        <div class="entity-name">{{label}}</div>
        <div class="entity-meta">{{description}}</div>
    </div>

    <!-- Center: Status Tags -->
    <div class="entity-badges" style="flex: 1; display: flex; gap: 5px; flex-wrap: wrap; justify-content: center;">
        <div class="sound-input-group" style="width: 100%;">
            <input type="hidden" name="tier1.{{key}}" value="{{value}}">

            <!-- Clickable Area for Edit -->
            <div class="search-sound" role="button" tabindex="0" data-key="{{key}}"
                style="min-height: 24px; display: flex; flex-wrap: wrap; gap: 4px; cursor: pointer; justify-content: flex-start;">

                {{#if tags.length}}
                {{#each tags as |tag|}}
                <span
                    class="ionrift-badge {{#if ../isCustom}}success{{else}}loading{{/if}} {{#if tag.isId}}id-tag{{/if}}"
                    title="{{tag.id}}">
                    <i class="fas fa-music"></i> {{tag.label}}
                </span>
                {{/each}}
                {{else}}
                <span class="ionrift-badge" style="opacity: 0.5;">No Sound Bound</span>
                {{/if}}
            </div>
        </div>
    </div>

    <!-- Right: Actions -->
    <div class="entity-actions" style="display: flex; gap: 5px;">
        <button type="button" class="play-preview" data-sound="{{key}}" title="Preview Sound">
            <i class="fas fa-play"></i>
        </button>
        <button type="button" class="search-sound" data-key="{{key}}" title="Edit Sound">
            <i class="fas fa-pen"></i>
        </button>
        {{#if isCustom}}
        <button type="button" class="reset-sound" data-key="{{key}}" title="Reset to Default" style="color: #ef4444;">
            <i class="fas fa-undo"></i>
        </button>
        {{/if}}
    </div>
</div>